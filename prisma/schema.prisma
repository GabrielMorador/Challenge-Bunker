
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "linux-musl"]
}

model Campaigns {
  id           Int           @id @default(autoincrement())
  name         String
  startDate    DateTime
  endDate      DateTime
  budget       Float
  interactions Interactions[] @relation("CampaignInteractions") 
  deletedAt    DateTime?      
}

model InteractionTypes {
  id           Int            @id @default(autoincrement())
  type         String         @unique
  interactions Interactions[] @relation("InteractionTypeRelation")
}

model Interactions {
  id                 Int              @id @default(autoincrement())
  campaignId         Int
  userId             String           @default(uuid())
  interactionTypeId  Int
  timestamp          DateTime         @default(now())
  campaign           Campaigns        @relation("CampaignInteractions", fields: [campaignId], references: [id])
  interactionType    InteractionTypes @relation("InteractionTypeRelation", fields: [interactionTypeId], references: [id])
}